<%= link_to "Sign out", signout_path, method: :delete %>
<p style="color: green"><%= notice %></p>

<h1>My Groups</h1>

<div id="groups">
  <% @groups.each do |group| %>
    <%# <%= render group %>
    <p>
    <% if group.group_members.split(",").include? session[:user_username] %>
      <%= link_to "#{group.group_name}", group %>
    </p>
    <% end %>
  <% end %>
</div>

